<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra (fake shadow usando margem) -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- sombra preta translÃºcida -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Fundo principal com borda -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- cinza claro -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- borda preta -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
