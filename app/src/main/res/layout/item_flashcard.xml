<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewPerguntaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pergunta:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/textViewPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual a capital do Brasil?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewRespostaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resposta:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewResposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BrasÃ­lia"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:visibility="gone"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/buttonEditarFlashcard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar Flashcard"
                android:layout_marginEnd="8dp"
                app:tint="@color/orange" />

            <ImageButton
                android:id="@+id/buttonExcluirFlashcard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Excluir Flashcard"
                app:tint="@color/red" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>