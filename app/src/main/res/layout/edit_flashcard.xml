<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Flashcard"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextPerguntaFlashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pergunta"
        android:inputType="textCapSentences|textMultiLine"
        android:minLines="2"
        android:gravity="top|start"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextRespostaFlashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Resposta"
        android:inputType="textCapSentences|textMultiLine"
        android:minLines="2"
        android:gravity="top|start"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelarFlashcard"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="@color/orange"
            app:strokeColor="@color/orange"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/buttonSalvarFlashcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>