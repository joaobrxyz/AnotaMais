<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/caderno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btVoltarCaderno"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:src="@drawable/image_back"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Voltar para o caderno"
        />

    <ImageButton
        android:id="@+id/btCriarFlashCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Criar Flashcard"
        android:src="@drawable/image_flashcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/borda_layout"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btVoltarCaderno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btAnterior"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        >

        <EditText
            android:id="@+id/txtTituloDoCaderno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:inputType="textCapSentences"
            android:paddingLeft="5dp"
            android:paddingBottom="8dp"
            android:text="Título"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/txtConteudoCaderno"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:hint="Conteúdo"
            android:inputType="textMultiLine"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btAnterior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/orange"
        android:text="Anterior"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btProximo"
        />

    <Button
        android:id="@+id/btProximo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:text="Próximo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btAnterior"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
